DROP TABLE IF EXISTS CUSTOMER;
DROP TABLE IF EXISTS ORDERS;

CREATE TABLE CUSTOMER (
  c_id int,
  c_name varchar(15),
  c_city varchar(10)
);

CREATE TABLE ORDERS (
  o_id int,
  product varchar(15),
  quality varchar(10),
  orderdate date
);
CREATE TABLE EMPLOYEE(
emp_id int,
e_name varchar(15),
dept varchar(30),
salary DECIMAL(10,2),
salarry int,
age int,
gender varchar(10)


);

