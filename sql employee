SELECT c_id,c_name FROM CUSTOMER

WHERE c_id=2;
SELECT * FROM ORDERS
WHERE o_id=12345906;
SELECT * FROM EMPLOYEE;
SELECT e_name,salary FROM EMPLOYEE WHERE salary>60000;
SELECT e_name,salary FROM EMPLOYEE ORDER BY salary;
SELECT e_name,salary FROM EMPLOYEE ORDER BY salary DESC;
SELECT e_name,salary FROM EMPLOYEE ORDER BY e_name;
SELECT dept,SUM(salary) AS TOTALSALARY
FROM EMPLOYEE
GROUP BY dept
SELECT dept,COUNT(dept) AS number
FROM EMPLOYEE
GROUP BY dept
