SELECT* FROM EMPLOYEES;
SELECT NAME,SALARY FROM EMPLOYEES;
SELECT * FROM EMPLOYEES WHERE AGE> 25;
SELECT * FROM EMPLOYEES WHERE SALARY BETWEEN 40000 AND 60000;
SELECT NAME FROM EMPLOYEES WHERE NAME LIKE 'S%';
SELECT * FROM EMPLOYEES WHERE NAME LIKE '%YA%';
SELECT * FROM EMPLOYEES 
ORDER BY SALARY DESC;
SELECT DISTINCT(DEPID) AS UNIQUE_DEP_ID
FROM EMPLOYEES;

SELECT * FROM EMPLOYEES
ORDER BY SALARY DESC
LIMIT 3;

SELECT COUNT(EMPID) AS TOTAL_NO_OF_EMPLOYEES
FROM EMPLOYEES;
SELECT MAX(SALARY) AS MAXIMUM_SALARY,MIN(SALARY) AS MINIMUM_SALARY, AVG(SALARY) AS AVERAGE_SALARY
FROM EMPLOYEES;
SELECT SUM(SALARY) AS TOTAL_SALARY_OF_101 FROM EMPLOYEES
WHERE DEPID=101;
SELECT D.DEPTNAME, AVG(E.SALARY) AS AVERAGE_SALARY_OF_DEP
FROM EMPLOYEES AS E 

JOIN DEPARTMENTS AS D 
ON E.DEPID=D.DEPID
GROUP BY D.DEPTNAME;

SELECT D.DEPTNAME,AVG(E.SALARY) AS AVERAGE_SALARY 
FROM EMPLOYEES AS E
JOIN DEPARTMENTS AS D 
ON E.DEPID=D.DEPID
GROUP BY D.DEPTNAME
HAVING AVG(E.SALARY)>50000;

SELECT E.NAME,D.DEPTNAME
FROM EMPLOYEES AS E 
INNER JOIN DEPARTMENTS AS D 
 ON E.DEPID=D.DEPID;
 SELECT E.NAME,D.DEPTNAME
FROM EMPLOYEES AS E 
LEFT JOIN DEPARTMENTS AS D 
 ON E.DEPID=D.DEPID;
 SELECT E.NAME,D.DEPTNAME
FROM EMPLOYEES AS E 
RIGHT JOIN DEPARTMENTS AS D 
 ON E.DEPID=D.DEPID;

SELECT NAME,SALARY
FROM EMPLOYEES
WHERE SALARY> ALL(SELECT AVG(SALARY) FROM EMPLOYEES );

SELECT NAME,SALARY 
FROM EMPLOYEES
WHERE SALARY=ALL(SELECT MAX(SALARY) FROM EMPLOYEES);



