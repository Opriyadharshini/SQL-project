CREATE TABLE EMPLOYEE(
EMPID INT PRIMARY KEY,
EMPNAME VARCHAR(15),
DEPARTMENT VARCHAR(15),
SALARY INT,
JOININGDATE DATE,
MANAGERID INT
);
INSERT INTO EMPLOYEE(EMPID,EMPNAME,DEPARTMENT,SALARY,JOININGDATE,MANAGERID)VALUES(1,'PRIYA','HR',50000,'2020-10-20',NULL);
INSERT INTO EMPLOYEE(EMPID,EMPNAME,DEPARTMENT,SALARY,JOININGDATE,MANAGERID)VALUES(102, 'Kumar', 'IT', 60000, '2020-02-10', 101);

INSERT INTO EMPLOYEE(EMPID,EMPNAME,DEPARTMENT,SALARY,JOININGDATE,MANAGERID)VALUES(103, 'Ravi', 'IT', 55000, '2022-01-22', 102);

INSERT INTO EMPLOYEE(EMPID,EMPNAME,DEPARTMENT,SALARY,JOININGDATE,MANAGERID)VALUES(104, 'Divya', 'Finance', 50000, '2023-04-10', 101);

INSERT INTO EMPLOYEE(EMPID,EMPNAME,DEPARTMENT,SALARY,JOININGDATE,MANAGERID)VALUES(105, 'Karthik', 'IT', 45000, '2021-07-19', 102);

SELECT * FROM EMPLOYEE;
SELECT EMPNAME,DEPARTMENT FROM EMPLOYEE;
SELECT EMPID,EMPNAME,DEPARTMENT FROM EMPLOYEE
WHERE DEPARTMENT='IT';
SELECT EMPNAME,SALARY FROM EMPLOYEE
WHERE SALARY>50000;
SELECT EMPNAME,JOININGDATE FROM EMPLOYEE
WHERE JOININGDATE>'2020-01-01';
SELECT EMPNAME,JOININGDATE FROM EMPLOYEE
WHERE MONTH(JOININGDATE)='04';
SELECT EMPNAME,DEPARTMENT FROM EMPLOYEE
WHERE EMPNAME LIKE 'P%';
SELECT EMPNAME FROM EMPLOYEE
WHERE EMPNAME LIKE '%A';
SELECT EMPNAME,DEPARTMENT FROM EMPLOYEE
WHERE MANAGERID IS NULL;
SELECT EMPNAME,SALARY FROM EMPLOYEE
WHERE SALARY BETWEEN 45000 AND 60000;
SELECT EMPNAME,SALARY FROM EMPLOYEE
ORDER BY SALARY DESC;
SELECT SUM(SALARY) AS TOTALSALARY
FROM EMPLOYEE;
SELECT EMPNAME,DEPARTMENT ,AVG(SALARY) AS AVERAGESALARY
FROM EMPLOYEE
GROUP BY EMPNAME,DEPARTMENT;
SELECT DEPARTMENT ,MAX(SALARY) AS MAXIMUM_SALARY 
FROM EMPLOYEE
WHERE DEPARTMENT='IT'
GROUP BY DEPARTMENT;
SELECT DEPARTMENT,COUNT(EMPNAME) AS TOTAL_COUNT
FROM EMPLOYEE
GROUP BY DEPARTMENT;
SELECT DEPARTMENT ,COUNT(EMPNAME) AS TOTAL_COUNT
FROM EMPLOYEE
GROUP BY DEPARTMENT
HAVING COUNT(EMPNAME)>2 ;

SELECT EMPNAME ,SALARY FROM EMPLOYEE
ORDER BY SALARY DESC
LIMIT 3 ;
SELECT DISTINCT SALARY FROM EMPLOYEE
ORDER BY SALARY DESC
LIMIT 1 OFFSET 1;
SELECT DEPARTMENT,AVG(SALARY) AS AVERGAE_SALARY
FROM EMPLOYEE
GROUP BY DEPARTMENT;
SELECT EMPNAME,COUNT(EMPNAME) AS TOTAL_EMP
FROM EMPLOYEE
WHERE YEAR(JOININGDATE)>2020
GROUP BY EMPNAME;
SELECT DEPARTMENT,AVG(SALARY) AS AVERGAE_SALARY
FROM EMPLOYEE
GROUP BY DEPARTMENT
ORDER BY AVG(SALARY) DESC
LIMIT 1;
SELECT EMPNAME,SALARY FROM EMPLOYEE
ORDER BY SALARY
LIMIT 1;
SELECT EMPNAME,JOININGDATE FROM EMPLOYEE
ORDER BY JOININGDATE DESC;

SELECT DEPARTMENT,AVG(SALARY) AS AVERAGE_SALARY
FROM EMPLOYEE
GROUP BY DEPARTMENT
HAVING AVG(SALARY)>50000;
SELECT DEPARTMENT,COUNT(EMPNAME) AS TOTAL_COUNT
FROM EMPLOYEE
GROUP BY DEPARTMENT
HAVING COUNT(EMPNAME) >2;
SELECT DEPARTMENT ,SUM(SALARY) AS TOTAL_SALARY
FROM EMPLOYEE
GROUP BY DEPARTMENT
HAVING SUM(SALARY)>100000;
SELECT DEPARTMENT,MAX(SALARY) AS MAX_SALARY
FROM EMPLOYEE
GROUP BY DEPARTMENT
HAVING MAX(SALARY)>60000;
SELECT EMPNAME FROM EMPLOYEE
WHERE SALARY> ALL(SELECT AVG(SALARY) FROM EMPLOYEE);

SELECT EMPNAME FROM EMPLOYEE
WHERE SALARY>ALL(SELECT SALARY FROM EMPLOYEE WHERE EMPNAME='RAVI');
SELECT EMPNAME FROM EMPLOYEE
WHERE DEPARTMENT=ALL(SELECT DEPARTMENT FROM EMPLOYEE WHERE EMPNAME='PRIYA');

CREATE TABLE DEPART(
DEPID INT PRIMARY KEY,
DEPARTMENT VARCHAR(15),
LOCATION VARCHAR(15)
);
INSERT INTO DEPART(DEPID, DEPARTMENT, LOCATION) VALUES
(1, 'HR', 'Delhi'),
(2, 'IT', 'Bangalore'),
(3, 'Finance', 'Mumbai'),
(4, 'IT', 'Chennai'),
(5, 'Admin', 'Hyderabad');


SELECT E.EMPNAME,E.DEPARTMENT,D.LOCATION
FROM EMPLOYEE AS E 
JOIN DEPART AS D 
ON E.DEPARTMENT=D.DEPARTMENT;



SELECT E.EMPNAME,E.DEPARTMENT,D.LOCATION
FROM EMPLOYEE AS E 
JOIN DEPART AS D 
ON E.DEPARTMENT=D.DEPARTMENT
WHERE LOCATION='CHENNAI';


SELECT E.EMPNAME,E.DEPARTMENT,D.LOCATION,E.MANAGERID
FROM EMPLOYEE AS E 
LEFT JOIN DEPART AS D 
ON E.DEPARTMENT=D.DEPARTMENT;


SELECT LOWER(EMPNAME) FROM EMPLOYEE;
SELECT E.EMPNAME,E.DEPARTMENT,E.MANAGERID AS MANAGER,D.LOCATION
FROM EMPLOYEE AS E 
JOIN DEPART AS D 
ON E.DEPARTMENT=D.DEPARTMENT;


SELECT SUBSTRING(EMPNAME,1,3) FROM EMPLOYEE;
SELECT LENGTH(EMPNAME) FROM EMPLOYEE;
SELECT YEAR(JOININGDATE),EMPNAME FROM EMPLOYEE;
SELECT EMPNAME,COUNT(MONTH(JOININGDATE)) AS TOTAL_MONTH
FROM EMPLOYEE
GROUP BY EMPNAME;

