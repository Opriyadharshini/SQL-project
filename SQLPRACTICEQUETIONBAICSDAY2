-- 1. All rows
SELECT * FROM reaction;

-- 2. Reaction type of users whose names start with 'A'
SELECT reaction_type FROM reaction WHERE user_name LIKE 'A%';

-- 3. Aliasing
SELECT user_name AS REACTOR, reaction_type AS type
FROM reaction;

-- 4. Mood level between 4 and 8
SELECT reaction_type FROM reaction WHERE mood_level BETWEEN 4 AND 8;

-- 5. LIKE with mood_level > 7
SELECT reaction_type FROM reaction
WHERE reaction_type = 'like' AND mood_level > 7;

-- 6. LOVE or ANGRY
SELECT reaction_type FROM reaction 
WHERE reaction_type IN ('love','angry');

-- 7. Not SAD
SELECT reaction_type FROM reaction 
WHERE reaction_type <> 'sad';

-- 8. LIKE, WOW, LOVE
SELECT * FROM reaction 
WHERE reaction_type IN ('like','wow','love');

-- 9. NULL comments
SELECT * FROM reaction WHERE comment IS NULL;

-- 10. NOT NULL comments
SELECT * FROM reaction WHERE comment IS NOT NULL;

-- 11. Uppercase usernames
SELECT UPPER(user_name) FROM reaction;

-- 12. Lowercase reaction types
SELECT LOWER(reaction_type) FROM reaction;

-- 13. Usernames longer than 6 chars
SELECT user_name FROM reaction WHERE LENGTH(user_name) > 6;

-- 14. Just lengths
SELECT LENGTH(user_name) FROM reaction;

-- 15. First 5 usernames (MySQL uses LIMIT, not TOP)
SELECT user_name FROM reaction LIMIT 5;

-- 16. Latest 5 usernames
SELECT user_name 
FROM reaction
LIMIT 5;

SELECT ROUND(mood_level,5) FROM REACTION ;


SELECT SUBSTRING(user_name,1,2) FROM REACTION;

SELECT SUBSTRING(UPPER(USER_NAME),1,2) FROM REACTION;


SELECT COUNT(reaction_type) AS TOTAL_COUNT_REACTIONS
FROM reaction
WHERE comment IS NULL;


