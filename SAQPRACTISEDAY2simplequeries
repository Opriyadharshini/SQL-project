SELECT * FROM REACTION
SELECT reaction_type FROM REACTION WHERE user_name LIKE 'A%';

SELECT USER_NAME AS REACTOR, reaction_type AS type
FROM REACTION

SELECT reaction_type FROM REACTION WHERE mood_level BETWEEN 4 AND 8;

SELECT reaction_type FROM reaction
WHERE reaction_type='LIKE' AND mood_level>7;

SELECT REACTION_TYPE FROM REACTION 
WHERE REACTION_TYPE ='LOVE' OR REACTION_TYPE='ANGRY';

SELECT REACTION_TYPE FROM REACTION 
WHERE REACTION_TYPE!='SAD';

SELECT * FROM REACTION 
WHERE REACTION_TYPE='LIKE' OR REACTION_TYPE= 'WOW' OR REACTION_TYPE= 'LOVE';

SELECT * FROM REACTION
WHERE comment IS NULL;

SELECT * FROM REACTION
WHERE COMMENT IS NOT NULL;

SELECT UPPER(USER_NAME) FROM REACTION

SELECT LOWER(REACTION_TYPE) FROM REACTION

SELECT USER_NAME FROM REACTION WHERE LEN(USER_NAME)>6;
SELECT LEN(USER_NAME) FROM REACTION

SELECT * FROM REACTION WHERE NOW(created_at);




