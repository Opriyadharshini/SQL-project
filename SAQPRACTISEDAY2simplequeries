CREATE TABLE reaction (
    id INT PRIMARY KEY IDENTITY(1,1),
    user_name VARCHAR(100),
    reaction_type VARCHAR(20),
    post_id INT,
    created_at DATETIME,
    location VARCHAR(100),
    mood_level INT,
    comment VARCHAR(MAX)   -- TEXT is deprecated in SQL Server
);
