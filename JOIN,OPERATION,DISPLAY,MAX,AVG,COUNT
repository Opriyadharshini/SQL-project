SELECT NAME,DEP FROM EMPLOYEES WHERE DEP='IT';



SELECT DEP,COUNT(NAME) AS TOTALEMPLOYEES
 FROM EMPLOYEES
 GROUP BY DEP

ORDER BY DEP;

SELECT NAME,SALARY FROM EMPLOYEES WHERE SALARY>60000;

SELECT NAME , JOINING_DATE FROM EMPLOYEES 
SELECT NAME, YEAR(JOINING_DATE) AS YEAROFJOIN
FROM EMPLOYEES


SELECT NAME,MAX(SALARY) AS HIGHESTSALARY
FROM EMPLOYEES
GROUP BY NAME
ORDER BY NAME;

--SELECT NAME,DEP,SALARY 
--FROM EMPLOYEES
--ORDER BY SALARY DESC
--LIMIT 1;


SELECT 
S.NAME,S.DEP ,C.LOCATION
FROM EMPLOYEES S 
JOIN DEPARTMENT C 
ON S.EMP_ID=C.EMP_ID;


SELECT DEP, AVG(SALARY) AS AVERAGESALARY
FROM EMPLOYEES
GROUP BY DEP
ORDER BY DEP;


SELECT DEP, AVG(SALARY) AS AVERAGESALARY
FROM EMPLOYEES
GROUP BY DEP
ORDER BY DEP;

SELECT S.NAME, S.DEP,S.SALARY
FROM EMPLOYEES S
JOIN DEPARTMENT C
ON S.EMP_ID=C.EMP_ID
WHERE S.SALARY>55000



SELECT NAME,DEP FROM EMPLOYEES WHERE DEP='HR';


SELECT NAME,COUNT(NAME) AS TOTALEMPLOYEES
FROM EMPLOYEES
GROUP BY NAME
ORDER BY NAME;



SELECT NAME,SALARY FROM EMPLOYEES
WHERE SALARY BETWEEN 50000 AND 60000
ORDER BY SALARY;


SELECT NAME,DEP,JOINING_DATE FROM EMPLOYEES 
WHERE JOINING_DATE>'2020-03-10';


SELECT NAME FROM EMPLOYEES
WHERE NAME='A%';

