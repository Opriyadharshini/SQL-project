CREATE TABLE EMPLOYEES(
EMP_ID INT PRIMARY KEY,
NAME VARCHAR(15),
DEP VARCHAR(10),
SALARY INT,
JOINING_DATE DATE

);
CREATE TABLE DEPARTMENT(
EMP_ID INT PRIMARY KEY,
DEP VARCHAR(15),
LOCATION VARCHAR(10)

);



INSERT INTO EMPLOYEES(EMP_ID,NAME,DEP,SALARY,JOINING_DATE) VALUES(1,'ALICE','HR',50000,'2019-01-15');
INSERT INTO EMPLOYEES(EMP_ID,NAME,DEP,SALARY,JOINING_DATE) VALUES(2,'BOB','IT',60000,'2020-03-10');
INSERT INTO EMPLOYEES(EMP_ID,NAME,DEP,SALARY,JOINING_DATE) VALUES(3,'CHARLIE','FINANCE',70000,'2021-05-20');
INSERT INTO EMPLOYEES(EMP_ID,NAME,DEP,SALARY,JOINING_DATE) VALUES(4,'DAVID','FINANCE',65000,'2018-07-12');
INSERT INTO EMPLOYEES(EMP_ID,NAME,DEP,SALARY,JOINING_DATE) VALUES(5,'EMMA','HR',55000,'2022-11-5');

