CREATE TABLE EMPLOYEE(
EMP_ID INT PRIMARY KEY,
NAME VARCHAR(20),
DEP VARCHAR(20),
SALARY INT,
MANAGER_ID INT

);
CREATE TABLE DEPARTMENT(
DEP_ID INT,
DEP_NAME VARCHAR(20)
);
INSERT INTO EMPLOYEE (EMP_ID, NAME, DEP, SALARY, MANAGER_ID) VALUES
(1, 'Priya', 'IT', 70000, 3),
(2, 'Karthik', 'HR', 55000, 4),
(3, 'Meena', 'IT', 60000, NULL),
(4, 'Arjun', 'Finance', 90000, NULL),
(5, 'Rahul', 'HR', 52000, 2),
(6, 'Divya', 'Finance', 75000, 4),
(7, 'Sam', 'IT', 45000, 1);
INSERT INTO DEPARTMENT (DEP_ID, DEP_NAME) VALUES
(1, 'IT'),
(2, 'HR'),
(3, 'Finance'),
(4, 'Sales');


SELECT * FROM EMPLOYEE 
WHERE DEP='IT';

SELECT NAME,SALARY FROM EMPLOYEE
ORDER BY SALARY DESC;
SELECT DISTINCT(DEP) FROM EMPLOYEE;
SELECT DEP,COUNT(NAME) AS TOTAL_EMPLOYEES
FROM EMPLOYEE
GROUP BY DEP;

SELECT DEP,SUM(SALARY) AS TOTAL_SALARY
FROM EMPLOYEE
GROUP BY DEP
HAVING SUM(SALARY)>100000;


SELECT NAME,SALARY FROM EMPLOYEE
ORDER BY SALARY DESC
LIMIT 1;

SELECT NAME,MAX(SALARY) AS HIGHEST_SALARY
FROM EMPLOYEE
GROUP BY NAME;
SELECT NAME, SALARY FROM EMPLOYEE
WHERE SALARY BETWEEN 50000 AND 80000;

SELECT E.EMP_ID,E.NAME,E.DEP,E.SALARY,E.MANAGER_ID,D.DEP_ID,D.DEP_NAME
FROM EMPLOYEE AS E 
JOIN DEPARTMENT AS D 
ON E.DEP=D.DEP_NAME;

SELECT NAME,SALARY FROM EMPLOYEE
WHERE SALARY>ALL(SELECT AVG(SALARY) FROM EMPLOYEE);

SELECT NAME,SALARY,DEP FROM EMPLOYEE
WHERE SALARY>ALL(SELECT AVG(SALARY) FROM EMPLOYEE)
GROUP BY NAME,SALARY,DEP;


SELECT NAME,SALARY FROM EMPLOYEE
ORDER BY SALARY DESC
LIMIT 1 OFFSET 1;

SELECT NAME,SALARY,DEP FROM EMPLOYEE
WHERE NAME LIKE 'P%';














