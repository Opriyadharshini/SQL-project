CREATE TABLE department_info (
    dept_id INT PRIMARY KEY,
    dept_name VARCHAR(30),(1, 'IT', 'Mumbai'),

    location VARCHAR(30)
);

INSERT INTO department_info VALUES
(2, 'HR', 'Delhi'),
(3, 'Finance', 'Chennai'),
(4, 'Marketing', 'Bangalore');


SELECT DEPT_NAME
FROM DEPARTMENT_INFO
WHERE LOCATION ='DELHI';

SELECT NAME,DEPT_NAME FROM employee
WHERE DEPT_NAME=(SELECT DEPT_NAME
FROM DEPARTMENT_INFO
WHERE LOCATION ='DELHI');

SELECT DEPT_NAME
FROM DEPARTMENT_INFO
WHERE LOCATION ='CHENNAI' OR 'MUMBAI';

SELECT NAME,DEPT_NAME FROM employee
WHERE DEPT_NAME IN (SELECT DEPT_NAME
FROM DEPARTMENT_INFO
WHERE LOCATION ='CHENNAI' OR  LOCATION ='MUMBAI');

SELECT name,DEPT_NAME,SALARY
FROM employee E
WHERE  salary >(SELECT AVG(SALARY)  FROM EMPLOYEE WHERE DEPT_NAME=E.DEPT_NAME) ;



SELECT*FROM EMPLOYEE;
