--subquery--
DROP TABLE IF EXISTS EMPLOYEE;

CREATE TABLE employee (
  emp_id INT PRIMARY KEY, 
  name VARCHAR(50),
  dept_name VARCHAR(30),
  salary DECIMAL(10,2),
  age INT,
  gender VARCHAR(10)
);

