-- SQL JOINS
-- create a database joins
-- use joins

-- Create Employee table
CREATE TABLE employee (
    e_id INT PRIMARY KEY,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    department_id INT
);

-- Insert data into Employee table
