CREATE TABLE EMPLOYEE(
EMP_ID INT,
EMP_NAME VARCHAR(50),
DEPT_ID INT,
SALARY INT,
JOIN_DATE DATE,
MANAGER_ID INT,
EMAIL VARCHAR(50)
);
CREATE TABLE DEPARTMENT(
DEPT_ID INT,
DEPT_NAME VARCHAR(50),
LOCATION VARCHAR(50)


);
