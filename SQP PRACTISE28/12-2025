SELECT EMP_NAME FROM EMPLOYEE
WHERE SALARY >50000;

SELECT E.EMP_NAME, E.SALARY FROM EMPLOYEE AS E
JOIN DEPARTMENT AS D 
ON E.DEPT_ID=D.DEPT_ID
WHERE D.DEPT_NAME='IT';

SELECT * FROM EMPLOYEE
WHERE JOIN_DATE >'2021-01-01'
ORDER BY JOIN_DATE;
SELECT DEPT_ID, COUNT(EMP_NAME) AS TOTAL_EMPLOYEES
FROM EMPLOYEE
GROUP BY DEPT_ID;
SELECT DEPT_ID,AVG(SALARY) AS AVERGAE_SALARY
FROM EMPLOYEE

GROUP BY DEPT_ID
HAVING AVG(SALARY)>40000;

SELECT E.EMP_NAME,D.DEPT_NAME
FROM EMPLOYEE AS E 
JOIN DEPARTMENT AS D 
ON E.DEPT_ID=D.DEPT_ID;

SELECT EMP_NAME FROM EMPLOYEE
WHERE SALARY>ALL(SELECT AVG(SALARY) FROM EMPLOYEE);

SELECT EMP_NAME,DEPT_ID,SALARY FROM EMPLOYEE
ORDER BY SALARY ASC

LIMIT 1;
SELECT DEPT_ID,COUNT(EMP_NAME) FROM EMPLOYEE
GROUP BY DEPT_ID
HAVING COUNT(EMP_NAME) >3;
SELECT EMP_NAME FROM EMPLOYEE
WHERE DEPT_ID=NULL;
SELECT MAX(SALARY) AS HIGHEST_SALARY
FROM EMPLOYEE;
SELECT * FROM EMPLOYEE
ORDER BY SALARY DESC
LIMIT 1 OFFSET 1;
UPDATE EMPLOYEE
SET SALARY=SALARY+(SALARY*0.1);
SELECT EMP_NAME,SALARY FROM EMPLOYEE;
DELETE FROM EMPLOYEE 
WHERE JOIN_DATE<'2018-01-01';
SELECT D.DEPT_NAME, E.SALARY
FROM EMPLOYEE AS E
JOIN DEPARTMENT AS D
ON E.DEPT_ID = D.DEPT_ID
ORDER BY E.SALARY DESC;




